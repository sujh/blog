<section class="content">
  <div class="row">
    <div class="col-md-3">
      <%= link_to('Compose', new_post_path, class: 'btn btn-primary btn-block margin-bottom') %>
      <div class="box box-solid">
        <div class="box-header with-border">
          <h3 class="box-title">
            Folders
          </h3>
        </div>
        <div class="box-body no-padding">
          <ul class="nav nav-pills nav-stacked">
            <li>
              <%= link_to('#') do %>
                <i class="fa fa-file-text-o"></i>
                Drafts
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <div class="col-md-9">
      <div class="box box-primary">
        <div class="box-body no-padding">
          <div class="mailbox-read-info">
            <h3>TITLE</h3>
            <h5>
              <div class="mailbox-read-time">
                 15 Feb. 2016 11:03 PM
              </div>
            </h5>
          </div>

          <div class="mailbox-read-message">
            <p>内容</p>
          </div>

          <div class="box-footer">
            <div class="pull-right">
              <%= link_to(edit_post_path(Post.first), class: 'btn btn-default') do %>
                <i class="fa fa-file-text-o"></i>
                Edit
              <% end %>

              <%= link_to(post_path(Post.first), method:'delete', class: 'btn btn-default') do %>
                <i class="fa fa-trash-o" aria-hidden="true"></i>
                Delete
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>