<div class="col-md-3">
  <%= link_to('Compose', new_super_post_path, class: 'btn btn-primary btn-block margin-bottom') %>
  <div class="box box-solid">
    <div class="box-header with-border">
      <h3 class="box-title">
        文件夹
      </h3>
    </div>
    <div class="box-body no-padding">
      <ul class="nav nav-pills nav-stacked">
        <li class="<%= active_for(controller: 'posts') %>">
          <%= link_to(super_posts_path) do %>
            <i class="fa fa-inbox"></i>
            文章
            <span class="label label-primary pull-right">
              <%= Post.cached_undeleted_count %>
            </span>
          <% end %>
        </li>
        <li class="<%= active_for(controller: 'post_drafts') %>">
          <%= link_to(super_post_drafts_path) do %>
            <i class="fa fa-file-text-o"></i>
            草稿
            <span class="label label-primary pull-right">
              <%= PostDraft.cached_count %>
            </span>
          <% end %>
        </li>
        <li class="<%= active_for(controller: 'post_trashes') %>">
          <%= link_to(super_post_trashes_path) do %>
            <i class="fa fa-trash-o"></i>
            垃圾箱
            <span class="label label-warning pull-right">
              <%= Post.cached_deleted_count %>
            </span>
          <% end %>
        </li>
      </ul>
    </div>
  </div>

  <div class="box box-solid">
    <div class="box-header with-border">
      <h3 class="box-title">
        标签
      </h3>
    </div>

    <div class="box-body no-padding">
      <ul class="nav nav-pills nav-stacked">
        <% Tag.all.each do |tag| %>
          <% if tag.posts_count != 0 %>
            <li class="<%= active_for(path: super_tag_path(tag)) %>">
              <%= link_to(super_tag_path(tag)) do %>
                <%= tag.value %>
                <span class="label label-primary pull-right">
                  <%= tag.posts_count %>
                </span>
              <% end %>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>