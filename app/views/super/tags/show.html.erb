<section class="content">
  <div class="row">
    <%= render partial: 'super/shared/folders' %>

    <div class="col-md-9">
      <div class="box box-primary">
        <% @posts.each do |post| %>
          <% if post.act_as_deleted? %>
            <div class="box-body no-padding">
              <div class="mailbox-read-info">
                <h3 style='color: red'><%= post.title %></h3>
                <% post.tags.each do |tag| %>
                  <span class="label label-default cu-s-margin">
                    <%= link_to tag.value, super_tag_path(tag) %>
                  </span>
                <% end %>
                <h5>
                  <div class="mailbox-read-time">
                    <%= post.updated_at.strftime('%Y-%m-%d %H:%M:%S') %>
                    <span class="pull-right">删除日期：<%= post.deleted_at.strftime('%Y-%m-%d') %></span>
                  </div>
                </h5>
              </div>

              <div class="mailbox-read-message">
                <%= render_markdown(post.content) %>
              </div>

              <div class="box-footer">
                <div class="pull-right">
                  <%= link_to(renew_super_post_trash_path(post), method: :post, class: 'btn btn-primary btn-sm') do %>
                    <i class="fa fa-file-text-o"></i>
                    恢复
                  <% end %>

                  <%= link_to(super_post_trash_path(post), method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: "确认删除：#{post.title}" }) do %>
                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                    删除
                  <% end %>
                </div>
              </div>
            </div>
          <% else %>
            <%= render partial: 'super/posts/post_display', locals: { post: post } %>
          <% end %>
        <% end %>
        <%= paginate @posts %>
      </div>
    </div>
  </div>
</section>