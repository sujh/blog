<div class="box-body no-padding">
  <div class="mailbox-read-info">
    <h3><%= link_to(post.title, super_post_path(post)) %></h3>
    <% post.tags.each do |tag| %>
      <span class="label label-default cu-s-margin">
        <%= link_to tag.value, super_tag_path(tag) %>
      </span>
    <% end %>
    <h5>
      <div class="mailbox-read-time">
        <%= post.updated_at.strftime('%Y-%m-%d %H:%M:%S') %>
      </div>
    </h5>
  </div>

  <div class="mailbox-read-message cu-height-limit" style="position: relative">
    <div class="cu-hide-box">
      <a class="cu-unfold-btn">
        <i class="fa fa-angle-double-down cu-m-font-size"></i>
      </a>
    </div>
    <%= render_markdown(post.content) %>
  </div>

  <div class="box-footer">
    <div class="pull-right">
      <%= link_to(edit_super_post_path(post), class: 'btn btn-primary btn-sm') do %>
        <i class="fa fa-file-text-o"></i>
        编辑
      <% end %>

      <%= link_to(super_post_path(post), method:'delete', class: 'btn btn-danger btn-sm', data: { confirm: "确认删除：#{post.title}" }) do %>
        <i class="fa fa-trash-o" aria-hidden="true"></i>
        删除
      <% end %>
    </div>
  </div>
  <hr style="margin: 0">
</div>
